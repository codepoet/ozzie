{
    "name": "tighten/ozzie",
    "description": "A dashboard to manage open source projects.",
    "keywords": [
        "open source",
        "laravel",
        "tighten"
    ],
    "homepage": "https://github.com/tighten/ozzie",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.0.2",
        "ext-gd": "*",
        "ext-json": "*",
        "bugsnag/bugsnag-laravel": "^2.24",
        "davaxi/sparkline": "^2.0.0",
        "erusev/parsedown": "^1.7",
        "graham-campbell/github": "^10.6",
        "guzzlehttp/guzzle": "^7.2",
        "http-interop/http-factory-guzzle": "^1.2",
        "inertiajs/inertia-laravel": "^0.6.9",
        "laravel/framework": "^9.48",
        "laravel/tinker": "^2.7",
        "laravel/ui": "^3.4",
        "nathanheffley/laravel-slack-blocks": "^2.1",
        "spatie/data-transfer-object": "^3.8",
        "tightenco/ziggy": "^1.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.13",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^6.3",
        "phpunit/phpunit": "^9.5.10",
        "spatie/laravel-ray": "^1.28",
        "tightenco/duster": "^0.5.5",
        "spatie/laravel-ignition": "^1.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "lint": [
            "vendor/bin/duster"
        ],
        "fix": [
            "vendor/bin/duster --fix"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ]
    }
}
